<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.course.mapper.CourUserCourseSectionMapper">
    
    <resultMap type="CourUserCourseSection" id="CourUserCourseSectionResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="userType"    column="user_type"    />
        <result property="courseId"    column="course_id"    />
        <result property="sectionId"    column="section_id"    />
        <result property="endTime"    column="end_time"    />
        <result property="finishStatus"    column="finish_status"    />
        <result property="note"    column="note"    />
        <result property="noteTime"    column="note_time"    />
    </resultMap>

    <resultMap type="CourCourse" id="CourCourseResult">
        <result property="id"    column="id"    />
        <result property="courseId"    column="course_id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="author"    column="author"    />
        <result property="url"    column="url"    />
        <result property="price"    column="price"    />
        <result property="detail"    column="detail"    />
    </resultMap>

    <sql id="selectCourUserCourseSectionVo">
        select id, user_id, course_id, section_id, end_time, finish_status, note, note_time from cour_user_course_section
    </sql>

    <select id="selectCourUserCourseSectionList" parameterType="CourUserCourseSection" resultMap="CourUserCourseSectionResult">
        <include refid="selectCourUserCourseSectionVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="courseId != null  and courseId != ''"> and course_id = #{courseId}</if>
            <if test="sectionId != null  and sectionId != ''"> and section_id = #{sectionId}</if>
            <if test="finishStatus != null "> and finish_status = #{finishStatus}</if>
        </where>
    </select>
    
    <select id="selectCourUserCourseSectionById"  resultMap="CourUserCourseSectionResult">
        <include refid="selectCourUserCourseSectionVo"/>
        where id = #{id}
    </select>

    <insert id="insertCourUserCourseSection" parameterType="CourUserCourseSection" useGeneratedKeys="true" keyProperty="id">
        insert into cour_user_course_section
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="courseId != null and courseId != ''">course_id,</if>
            <if test="sectionId != null and sectionId != ''">section_id,</if>
            <if test="endTime != null">end_time,</if>
            <if test="finishStatus != null">finish_status,</if>
            <if test="userType != null">user_type,</if>
            <if test="note != null">note,</if>
            <if test="noteTime != null">note_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="courseId != null and courseId != ''">#{courseId},</if>
            <if test="sectionId != null and sectionId != ''">#{sectionId},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="finishStatus != null">#{finishStatus},</if>
            <if test="userType != null">#{userType},</if>
            <if test="note != null">#{note},</if>
            <if test="noteTime != null">#{noteTime},</if>
         </trim>
    </insert>

    <update id="updateCourUserCourseSection" parameterType="CourUserCourseSection">
        update cour_user_course_section
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
            <if test="sectionId != null and sectionId != ''">section_id = #{sectionId},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="finishStatus != null">finish_status = #{finishStatus},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="note != null">note = #{note},</if>
            <if test="noteTime != null">note_time = #{noteTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCourUserCourseSectionById" >
        delete from cour_user_course_section where id = #{id}
    </delete>

    <delete id="deleteCourUserCourseSectionByIds" parameterType="String">
        delete from cour_user_course_section where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="recordEndTime" parameterType="CourUserCourseSection">
        update cour_user_course_section
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
            <if test="sectionId != null and sectionId != ''">section_id = #{sectionId},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="finishStatus != null">finish_status = #{finishStatus},</if>
        </trim>
        where id = #{id}
    </update>

    <select id="findEndTime" parameterType="CourUserCourseSection" resultType="Integer">
        select end_time
        from cour_user_course_section
        <where>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="courseId != null"> and course_id = #{courseId}</if>
            <if test="sectionId != null"> and section_id = #{sectionId}</if>
        </where>
        limit 1
    </select>
</mapper>