<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.course.mapper.CourCourseClassMapper">
    
    <resultMap type="CourCourseClass" id="CourCourseClassResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="sort"    column="sort"    />
        <result property="serviceTo"    column="service_to"    />
    </resultMap>

    <sql id="selectCourCourseClassVo">
        select id, name, url, sort , service_to from cour_course_class
    </sql>

    <select id="selectCourCourseClassList" parameterType="CourCourseClass" resultMap="CourCourseClassResult">
        <include refid="selectCourCourseClassVo"/>
        <where>  
            <if test="serviceTo != null and serviceTo != ''">and  service_to = #{serviceTo}</if>
        </where>
        order by sort asc
    </select>
    
    <select id="selectCourCourseClassById" resultMap="CourCourseClassResult">
        <include refid="selectCourCourseClassVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCourCourseClass" parameterType="CourCourseClass" useGeneratedKeys="true" keyProperty="id">
        insert into cour_course_class
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="sort != null">sort,</if>
            <if test="serviceTo != null">service_to,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="sort != null">#{sort},</if>
            <if test="serviceTo != null">#{serviceTo},</if>
         </trim>
    </insert>

    <update id="updateCourCourseClass" parameterType="CourCourseClass">
        update cour_course_class
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="serviceTo != null">service_to = #{serviceTo},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCourCourseClassById" >
        delete from cour_course_class where id = #{id}
    </delete>

    <delete id="deleteCourCourseClassByIds" parameterType="String">
        delete from cour_course_class where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>