<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.gauge.mapper.PsyConsultingServiceMapper">
    
    <resultMap type="PsyConsultingService" id="PsyConsultingServiceResult">
        <result property="id"    column="id"    />
        <result property="consultantId"    column="consultant_id"    />
        <result property="serviceId"    column="service_id"    />
        <result property="type"    column="type"    />
        <result property="price"    column="price"    />
        <result property="describes"    column="describes"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPsyConsultingServiceVo">
        select id, consultant_id, service_id, type, price, describes, create_by, create_time, update_by, update_time from psy_consulting_service
    </sql>

    <select id="selectPsyConsultingServiceList" parameterType="PsyConsultingService" resultMap="PsyConsultingServiceResult">
        <include refid="selectPsyConsultingServiceVo"/>
        <where>  
            <if test="consultantId != null "> and consultant_id = #{consultantId}</if>
            <if test="serviceId != null "> and service_id = #{serviceId}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="price != null  and price != ''"> and price = #{price}</if>
            <if test="describes != null  and describes != ''"> and describes = #{describes}</if>
        </where>
    </select>
    
    <select id="selectPsyConsultingServiceById"  resultMap="PsyConsultingServiceResult">
        <include refid="selectPsyConsultingServiceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPsyConsultingService" parameterType="PsyConsultingService" useGeneratedKeys="true" keyProperty="id">
        insert into psy_consulting_service
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="consultantId != null">consultant_id,</if>
            <if test="serviceId != null">service_id,</if>
            <if test="type != null">type,</if>
            <if test="price != null">price,</if>
            <if test="describes != null">describes,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="consultantId != null">#{consultantId},</if>
            <if test="serviceId != null">#{serviceId},</if>
            <if test="type != null">#{type},</if>
            <if test="price != null">#{price},</if>
            <if test="describes != null">#{describes},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePsyConsultingService" parameterType="PsyConsultingService">
        update psy_consulting_service
        <trim prefix="SET" suffixOverrides=",">
            <if test="consultantId != null">consultant_id = #{consultantId},</if>
            <if test="serviceId != null">service_id = #{serviceId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="price != null">price = #{price},</if>
            <if test="describes != null">describes = #{describes},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePsyConsultingServiceById" >
        delete from psy_consulting_service where id = #{id}
    </delete>

    <delete id="deletePsyConsultingServiceByIds" parameterType="String">
        delete from psy_consulting_service where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>