<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.psychology.mapper.PsyConsultantAddressMapper">
    
    <resultMap type="PsyConsultantAddress" id="PsyConsultantAddressResult">
        <result property="addressId"    column="address_id"    />
        <result property="consultantId"    column="consultant_id"    />
        <result property="status"    column="status"    />
        <result property="contactName"    column="contact_name"    />
        <result property="contactTelephone"    column="contact_telephone"    />
        <result property="contactAddress"    column="contact_address"    />
        <result property="region"    column="region"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPsyConsultantAddressVo">
        select address_id, consultant_id, status, contact_name, contact_telephone, contact_address, region,  del_flag, create_by, create_time, update_by, update_time from psy_consultant_address
    </sql>

    <select id="selectPsyConsultantAddressList" parameterType="PsyConsultantAddress" resultMap="PsyConsultantAddressResult">
        <include refid="selectPsyConsultantAddressVo"/>
        <where>  
            <if test="consultantId != null "> and consultant_id = #{consultantId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="contactName != null  and contactName != ''"> and contact_name like concat('%', #{contactName}, '%')</if>
            <if test="contactTelephone != null  and contactTelephone != ''"> and contact_telephone = #{contactTelephone}</if>
            <if test="contactAddress != null  and contactAddress != ''"> and contact_address = #{contactAddress}</if>
        </where>
    </select>
    
    <select id="selectPsyConsultantAddressByAddressId" parameterType="Long" resultMap="PsyConsultantAddressResult">
        <include refid="selectPsyConsultantAddressVo"/>
        where address_id = #{addressId}
    </select>
        
    <insert id="insertPsyConsultantAddress" parameterType="PsyConsultantAddress">
        insert into psy_consultant_address
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="addressId != null">address_id,</if>
            <if test="consultantId != null">consultant_id,</if>
            <if test="status != null">status,</if>
            <if test="contactName != null and contactName != ''">contact_name,</if>
            <if test="contactTelephone != null">contact_telephone,</if>
            <if test="contactAddress != null">contact_address,</if>
            <if test="region != null">region,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="addressId != null">#{addressId},</if>
            <if test="consultantId != null">#{consultantId},</if>
            <if test="status != null">#{status},</if>
            <if test="contactName != null and contactName != ''">#{contactName},</if>
            <if test="contactTelephone != null">#{contactTelephone},</if>
            <if test="contactAddress != null">#{contactAddress},</if>
            <if test="region != null">#{region},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePsyConsultantAddress" parameterType="PsyConsultantAddress">
        update psy_consultant_address
        <trim prefix="SET" suffixOverrides=",">
            <if test="consultantId != null">consultant_id = #{consultantId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="contactName != null and contactName != ''">contact_name = #{contactName},</if>
            <if test="contactTelephone != null">contact_telephone = #{contactTelephone},</if>
            <if test="contactAddress != null">contact_address = #{contactAddress},</if>
            <if test="region != null">region = #{region},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where address_id = #{addressId}
    </update>

    <delete id="deletePsyConsultantAddressByAddressId" parameterType="Long">
        delete from psy_consultant_address where address_id = #{addressId}
    </delete>

    <delete id="deletePsyConsultantAddressByAddressIds" parameterType="String">
        delete from psy_consultant_address where address_id in 
        <foreach item="addressId" collection="array" open="(" separator="," close=")">
            #{addressId}
        </foreach>
    </delete>
</mapper>