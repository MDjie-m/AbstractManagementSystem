<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysProductTypeMapper">
    
    <resultMap type="SysProductType" id="SysProductTypeResult">
        <result property="productCode"    column="product_code"    />
        <result property="productName"    column="product_name"    />
        <result property="parentCode"    column="parent_code"    />
        <result property="tagId"    column="tag_id"    />
        <result property="tagName"    column="tag_Name"    />
        <result property="showFlag"    column="show_flag"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="statisticalMarker"    column="statistical_marker"    />
        <result property="classification"    column="classification"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysProductTypeVo">
        select product_code, product_name, parent_code, tag_id, tag_name , show_flag ,del_flag,
               statistical_marker  , classification, remark from sys_product_type
    </sql>

    <select id="selectSysProductTypeList" parameterType="SysProductType" resultMap="SysProductTypeResult">
        <include refid="selectSysProductTypeVo"/>
        <where>
            del_flag != 1
            <if test="productCode != null  and productCode != ''"> and product_code = #{productCode}</if>
            <if test="productName != null  and productName != ''"> and product_name like concat('%', #{productName}, '%')</if>
            <if test="parentCode != null  and parentCode != ''"> and parent_code = #{parentCode}</if>
            <if test="tagId != null  and tagId != ''"> and tag_Id = #{tagId}</if>
            <if test="tagName != null  and tagName != ''"> and tag_Name like concat('%', #{tagName}, '%')</if>
            <if test="showFlag != null  and showFlag != ''"> and show_flag = #{showFlag}</if>
            <if test="delFlag != null  and delFlag != ''"> and del_flag = #{delFlag}</if>
            <if test="statisticalMarker != null  and statisticalMarker != ''"> and statistical_marker like concat('%', #{statisticalMarker}, '%')</if>
            <if test="classification != null and classification != '' "> and classification = #{classification}</if>
            <if test="remark != null  and remark != ''"> and remark = #{remark}</if>
        </where>
    </select>

    <select id="selectSysProductTypeByProductCode" parameterType="String" resultMap="SysProductTypeResult">
        <include refid="selectSysProductTypeVo"/>
        where del_flag != 1
        AND product_code = #{productCode}
    </select>

    <select id="selectChildren" resultMap="SysProductTypeResult" parameterType="String">
        select product_code, product_name, parent_code, tag_id, tag_name , show_flag ,statistical_marker, classification, remark from sys_product_type
        where parent_code=#{parentCode}
        <if test="classification != null  and classification == 0 "> and (classification = 0 or classification = 2) </if>
        <if test="classification != null  and classification == 1 "> and (classification = 1 or classification = 2) </if>
        <if test="classification == null ">and (classification = 0 or classification = 1 or classification = 2) </if>
    </select>

<!--    下面这个是根据传来的某个分类的每一级的分类列表查询对应的名字和标签-->
    <select id="selectType" resultMap="SysProductTypeResult">
        SELECT product_code, product_name, tag_id, tag_name
                 FROM sys_product_type
                 WHERE product_code IN
                 <foreach item="item" index="index" collection="productCodes" open="(" separator="," close=")">
                     #{item}
                </foreach>
                AND del_flag = 0;
             ORDER BY product_code
    </select>
    <select id="selectTag" resultMap="SysProductTypeResult" parameterType="String">
        select product_code,product_name,tag_id,tag_name from sys_product_type
        where product_code = #{code}
          AND  del_flag != 1;
    </select>

    <insert id="insertSysProductType" parameterType="SysProductType">
        insert into sys_product_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productCode != null and productCode != ''">product_code,</if>
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="parentCode != null and parentCode != ''">parent_code,</if>
            <if test="tagId != null and tagId != ''">tag_id,</if>
            <if test="tagName != null and tagName != ''">tag_name,</if>
            <if test="showFlag != null ">show_flag, </if>
            <if test="statisticalMarker != null and statisticalMarker != ''">statistical_marker,</if>
            <if test="classification != null and classification != ''">classification,</if>
            <if test="remark != null and remark != ''">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productCode != null and productCode != ''">#{productCode},</if>
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="parentCode != null and parentCode != ''">#{parentCode},</if>
            <if test="tagId != null and tagId != ''">#{tagId},</if>
            <if test="tagName != null and tagName != ''">#{tagName},</if>
            <if test="showFlag != null ">#{showFlag},</if>
            <if test="statisticalMarker != null and statisticalMarker != ''">#{statisticalMarker},</if>
            <if test="classification != null and classification != ''">#{classification},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysProductType" parameterType="SysProductType">
        update sys_product_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="parentCode != null and parentCode != ''">parent_code = #{parentCode},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="tagId != null  and tagId != ''">tag_Id = #{tagId},</if>
            <if test="tagName != null  and tagName != ''">tag_Name = #{tagName},</if>
            <if test="showFlag != null  ">show_flag = #{showFlag}</if>
            <if test="statisticalMarker != null and statisticalMarker != ''">statistical_marker = #{statisticalMarker},</if>
            <if test="classification != null ">classification = #{classification}</if>
        </trim>
        where product_code = #{productCode}
        AND del_flag = 0;
    </update>

    <update id="deleteSysProductTypeByProductCode" parameterType="String">
        update sys_product_type
        set del_flag = 1 ,
        where product_code = #{productCode};
    </update>

    <update id="deleteSysProductTypeByProductCodes" parameterType="String">
        update sys_product_type
        set del_flag = 1
        where product_code in
        <foreach item="productCode" collection="array" open="(" separator="," close=")">
            #{productCode}
        </foreach>
    </update>
</mapper>