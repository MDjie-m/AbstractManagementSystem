    <sql id="selectOrderGoodsVo">
        select order_detail_id, order_id, desk_id, goods_id, goods_name, price, num, total_amount_due, total_discount_amount, total_amount, total_give_amount, discount_value, total_wipe_zero, remark, create_by, create_time, update_by, create_by_id, update_by_id, update_time from t_order_goods
    </sql>

    <select id="selectOrderGoodsList" parameterType="OrderGoods" resultMap="OrderGoodsResult">
        <include refid="selectOrderGoodsVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="deskId != null "> and desk_id = #{deskId}</if>
            <if test="goodsId != null "> and goods_id = #{goodsId}</if>
            <if test="goodsName != null "> and goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="num != null "> and num = #{num}</if>
            <if test="totalAmountDue != null "> and total_amount_due = #{totalAmountDue}</if>
            <if test="totalGiveAmount != null "> and total_give_amount = #{totalGiveAmount}</if>
            <if test="totalDiscountAmount != null "> and total_discount_amount = #{totalDiscountAmount}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="discountValue != null "> and discount_value = #{discountValue}</if>
            <if test="totalWipeZero != null "> and total_wipe_zero = #{totalWipeZero}</if>
            <if test="createById != null "> and create_by_id = #{createById}</if>
            <if test="updateById != null "> and update_by_id = #{updateById}</if>
        </where>
    </select>
    
    <select id="selectOrderGoodsByOrderDetailId" parameterType="Long" resultMap="OrderGoodsResult">
        <include refid="selectOrderGoodsVo"/>
        where order_detail_id = #{orderDetailId}
    </select>

    <insert id="insertOrderGoods" parameterType="OrderGoods">
        insert into t_order_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderDetailId != null">order_detail_id,</if>
            <if test="orderId != null">order_id,</if>
            <if test="deskId != null">desk_id,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="goodsName != null">goods_name,</if>
            <if test="price != null">price,</if>
            <if test="num != null">num,</if>
            <if test="totalAmountDue != null">total_amount_due,</if>
            <if test="totalDiscountAmount != null">total_discount_amount,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="totalGiveAmount != null">total_give_amount,</if>
            <if test="discountValue != null">discount_value,</if>
            <if test="totalWipeZero != null">total_wipe_zero,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createById != null">create_by_id,</if>
            <if test="updateById != null">update_by_id,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderDetailId != null">#{orderDetailId},</if>
            <if test="orderId != null">#{orderId},</if>
