    </update>

    <delete id="deleteOrderGoodsByOrderDetailId" parameterType="Long">
        delete from t_order_goods where order_detail_id = #{orderDetailId}
    </delete>

    <delete id="deleteOrderGoodsByOrderDetailIds" parameterType="String">
        delete from t_order_goods where order_detail_id in 
        <foreach item="orderDetailId" collection="array" open="(" separator="," close=")">
            #{orderDetailId}
        </foreach>
