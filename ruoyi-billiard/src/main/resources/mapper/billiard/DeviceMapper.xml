<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.billiard.mapper.DeviceMapper">
    
    <resultMap type="Device" id="DeviceResult">
        <result property="deviceId"    column="device_id"    />
        <result property="storeId"    column="store_id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceSerialNum"    column="device_serial_num"    />
        <result property="deviceType"    column="device_type"    />
        <result property="extendData"    column="extend_data"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="storeName"    column="store_name"    />
        <result property="deskId"    column="desk_id"    />
        <result property="createById"    column="create_by_id"    />
        <result property="updateById"    column="update_by_id"    />
    </resultMap>

    <sql id="selectDeviceVo">
        select   a.* ,b.store_name ,c.desk_id from t_device a left join   t_store b on a.store_id=b.store_id
        left join t_desk_device_relation c on a.device_id=c.device_id
    </sql>

    <select id="selectDeviceList" parameterType="Device" resultMap="DeviceResult">
        <include refid="selectDeviceVo"/>
        <where>  
            <if test="deviceName != null  and deviceName != ''"> and device_name like concat('%', #{deviceName}, '%')</if>
            <if test="deviceSerialNum != null  and deviceSerialNum != ''"> and device_serial_num like concat('%', #{deviceSerialNum}, '%')</if>
            <if test="deviceType != null "> and device_type = #{deviceType}</if>
            <if test="status != null "> and a.status = #{status}</if>
            <if test="storeId != null "> and a.store_id = #{storeId}</if>
        </where>
    </select>
    
    <select id="selectDeviceByDeviceId" parameterType="Long" resultMap="DeviceResult">
        <include refid="selectDeviceVo"/>
        where device_id = #{deviceId}
    </select>

    <insert id="insertDevice" parameterType="Device">
        insert into t_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="storeId != null">store_id,</if>
            <if test="deviceName != null and deviceName != ''">device_name,</if>
            <if test="deviceSerialNum != null">device_serial_num,</if>
            <if test="deviceType != null">device_type,</if>
            <if test="extendData != null">extend_data,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateById != null">update_by_id,</if>
            <if test="createById != null">create_by_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="storeId != null">#{storeId},</if>
            <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
            <if test="deviceSerialNum != null">#{deviceSerialNum},</if>
            <if test="deviceType != null">#{deviceType},</if>
            <if test="extendData != null">#{extendData},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateById != null">#{updateById},</if>
            <if test="createById != null">#{createById},</if>
         </trim>
    </insert>

    <update id="updateDevice" parameterType="Device">
        update t_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="storeId != null">store_id = #{storeId},</if>
            <if test="deviceName != null and deviceName != ''">device_name = #{deviceName},</if>
            <if test="deviceSerialNum != null">device_serial_num = #{deviceSerialNum},</if>
            <if test="deviceType != null">device_type = #{deviceType},</if>
            <if test="extendData != null">extend_data = #{extendData,jdbcType=OTHER,typeHandler=com.ruoyi.common.config.GenericTypeHandler},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateById != null">update_by_id =#{updateById},</if>
            <if test="createById != null">create_by_id =#{createById},</if>
        </trim>
        where device_id = #{deviceId}
    </update>

    <delete id="deleteDeviceByDeviceId" parameterType="Long">
        delete from t_device where device_id = #{deviceId}
    </delete>

    <delete id="deleteDeviceByDeviceIds" parameterType="String">
        delete from t_device where device_id in 
        <foreach item="deviceId" collection="array" open="(" separator="," close=")">
            #{deviceId}
        </foreach>
    </delete>
</mapper>