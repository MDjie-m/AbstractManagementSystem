<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.url.mapper.TestResourceMapper">
    
    <resultMap type="TestResource" id="TestResourceResult">
        <result property="id"    column="id"    />
        <result property="uri"    column="uri"    />
    </resultMap>

    <sql id="selectTestResourceVo">
        select id, uri from test
    </sql>

    <select id="selectTestResourceList" parameterType="TestResource" resultMap="TestResourceResult">
        <include refid="selectTestResourceVo"/>
        <where>  
            <if test="uri != null  and uri != ''"> and uri = #{uri}</if>
        </where>
    </select>
    
    <select id="selectTestResourceById" parameterType="Long" resultMap="TestResourceResult">
        <include refid="selectTestResourceVo"/>
        where id = #{id}
    </select>

    <insert id="insertTestResource" parameterType="TestResource" useGeneratedKeys="true" keyProperty="id">
        insert into test
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uri != null">uri,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uri != null">#{uri},</if>
         </trim>
    </insert>

    <update id="updateTestResource" parameterType="TestResource">
        update test
        <trim prefix="SET" suffixOverrides=",">
            <if test="uri != null">uri = #{uri},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTestResourceById" parameterType="Long">
        delete from test where id = #{id}
    </delete>

    <delete id="deleteTestResourceByIds" parameterType="String">
        delete from test where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>